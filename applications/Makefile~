all:
	rm -rf ebin/* src/*~;
	erlc -o ebin src/*.erl;
	cp src/*.app ebin;
	tar -cvf count.tar ebin
test:
	rm -rf ebin/* test_ebin/* test_src/*~;
	erlc -o ebin adder/src/*.erl;
	erlc -o ebin server/src/*.erl;
	erlc -o test_ebin test_src/*.erl;
	cp adder/src/*.app ebin;
	cp server/src/*.app ebin;
	erl -pa ebin -pa test_ebin -s test_b_eunit test -sname test_b
