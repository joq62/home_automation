all:

compile:
	rm -rf app_files/* ebin_files/* src_files/*;
#  applications
	erlc -o ebin_files /home/pi/erlang/dist/home_automation/applications/*/src/*.erl;
#servers
	erlc -o ebin_files  /home/pi/erlang/dist/home_automation/servers/*/src/*.erl;
#	cp /home/pi/erlang/dist/home_automation/servers/*/src/*.hrl src_files;
# eunit test
	rm -rf test_ebin/*;
	erlc -o test_ebin test_src/*.erl;
	echo Compilation succeeded
test:
#erl command
	erl -pa test_ebin -pa app_files -name controller@joqhome.dynamic-dns.net -setcookie change -kernel inet_dist_listen_min 20000 inet_dist_listen_max 20000 -s boot_strap_test start controller
sys_test:
	erl -pa ebin_files -name controller@joqhome.dynamic-dns.net -setcookie change -kernel inet_dist_listen_min 20000 inet_dist_listen_max 20000 -pa test_ebin -s test_system_eunit test
exec:
	erl -pa ebin_files -name controller@joqhome.dynamic-dns.net -setcookie change -kernel inet_dist_listen_min 20000 inet_dist_listen_max 20000 -pa test_ebin -s system_boot start
